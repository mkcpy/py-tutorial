import random

#Provided values
name = "Martin"
question = ""
answer = ""
random_number = random.randint(1, 9)

#If name is blank, it will format it to look neater.
if name == "":
  print("Question: " + question)
elif question == "":
 print("Please make sure to ask a question!")
else:
  print(name + " asks: " + question)


#Random answers assigned to each int from 1-9
if random_number == 1:
  answer = "Yes - definitely."
elif random_number == 2:
  answer = "It is decidedly so."
elif random_number == 3:
  answer = "Without a doubt."
elif random_number == 4:
  answer = "Reply hazy, try again."
elif random_number == 5:
  answer = "Ask again later."
elif random_number == 6:
  answer = "Better not tell you now."
elif random_number == 7:
  answer = "My sources say no."
elif random_number == 8:
  answer = "Outlook not so good."
elif random_number == 9:
  answer = "Very doubtful."
else:
  answer = "Error"

if question == "":
  print("Error!")
else:
  print("Magic 8-Ball's answer: " + answer)


=================================

import random

#Provided values
name = input("Please tell me your name: ")
question = input("What is your question: ")
answer = ""
random_number = random.randint(1, 9)

#Random answers assigned to each int from 1-9
if random_number == 1:
  answer = "Yes - definitely."
elif random_number == 2:
  answer = "It is decidedly so."
elif random_number == 3:
  answer = "Without a doubt."
elif random_number == 4:
  answer = "Reply hazy, try again."
elif random_number == 5:
  answer = "Ask again later."
elif random_number == 6:
  answer = "Better not tell you now."
elif random_number == 7:
  answer = "My sources say no."
elif random_number == 8:
  answer = "Outlook not so good."
elif random_number == 9:
  answer = "Very doubtful."
else:
  answer = "Error"

# Try to figure out how to get the code to stop @ name if nothing is provided. 
# Currently, if no name is provided it will move to elif and then print the prompt for no name
if name == "":
    print("Please provide us your name.")
elif question == "":
    print("ERROR! No questions asked.")
else:
    print(f"Magic 8-Ball's answer: {answer}")
